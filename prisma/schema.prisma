generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model comments {
  id        Int      @id @default(autoincrement())
  productId String
  name      String
  email     String
  message   String
  image     String?
  response  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([productId], name: "productId_index")
}

model rsvp {
  id        Int      @id @default(autoincrement())
  name      String
  whatsapp  String
  source    String // ex: "popup" | "banner"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([source], name: "source_index")
}
